<h1>CREATE NEW</h1>

<form class="" action="/earphones" method="post">

<label >Name</label>
<input type="text" name="name" >

<label >Image</label>
<input type="text" name="image" >

<label >Price</label>
<input type="integer" name="price" >

<label>Noise Cancelling</label>
<input type="boolean" name="noise_cancelling" >

<label>Notes</label>
<input type="text" name="notes" >


<label>Brand</label>
  <select name="brands_id">
    <!-- Let the user choose an associated plant from all the plants in db -->
    <option></option>
    <% Brands.all.each do |brands| %>
      <option value="<%= brands.id %>" ><%= brands.name %></option>
    <% end %>
  </select>

<button>Create</button>

</form>
