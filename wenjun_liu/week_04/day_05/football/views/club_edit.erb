<h1>Edit Club</h1>

<form action="/clubs/<%= @club.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @club.name %>" required autofocus>
  <label>Country:</label>
  <input type="text" name="country" value="<%= @club.country %>" placeholder="club country" required autofocus>
  <label>Image:</label>
  <input type="url" name="img" value="<%= @club.img %>" required>

  <button>Update</button>
</form>
