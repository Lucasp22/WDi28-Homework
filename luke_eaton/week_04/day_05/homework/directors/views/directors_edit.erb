<div class="editorz">
  <h1>Edit Director</h1>

  <form action="/directors/<%= @director['id'] %>" method="post">
    <label>Name:</label>
    <input type="text" name="name" value="<%= @director['name'] %>" placeholder="Director name" required autofocus>
    <label>Film:</label>
    <input type="text" name="film" value="<%= @director['film'] %>" placeholder="Film name" required>
    <label>Image:</label>
    <input type="url" name="image" value="<%= @director['image'] %>" placeholder="http://...">

    <button>Update</button>
  </form>
</div>
