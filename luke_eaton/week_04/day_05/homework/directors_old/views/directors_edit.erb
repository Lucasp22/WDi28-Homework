<h1>Edit Director</h1>

<form action="/directors/<%= @director['id'] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @director['name'] %>" placeholder="Directors name" required autofocus>
  <label>Family:</label>
  <input type="text" name="film" value="<%= @director['film'] %>" placeholder="Film name" required>

  <button>Update</button>
</form>
