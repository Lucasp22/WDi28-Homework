<div class="topofedit">
  <h1>Edit Artist</h1>

  <form class="add_form" action="/artists/<%=@artist.id%>" method="post">
    <label>Name:</label>
    <input type="text" name="name" value="<%=@artist.name%>" placeholder="Artist's Name" required autofocus>
    <label>Image:</label>
    <input type="url" name="image" value="<%=@artist.image%>" placeholder="http://...">

    <button>Update Artist!</button>
  </form>
</div>
