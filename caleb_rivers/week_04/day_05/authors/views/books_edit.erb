<h1>Edit Book</h1>

<form action="/books/<%= @book['id'] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @book['name'] %>" placeholder="Book name" required autofocus>
  <label>Image:</label>
  <input type="url" name="cover" value="<%= @book['cover'] %>" placeholder="http://...">

  <button>Update</button>
</form>
